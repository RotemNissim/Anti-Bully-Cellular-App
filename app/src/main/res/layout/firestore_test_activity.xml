<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnAddMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Message" />

    <Button
        android:id="@+id/btnGetMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Message by ID" />

    <Button
        android:id="@+id/btnGetAllMessages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get All Messages" />

    <Button
        android:id="@+id/btnUpdateMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Message Flag" />

    <Button
        android:id="@+id/btnDeleteMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Message" />

</LinearLayout>
