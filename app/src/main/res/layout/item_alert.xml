<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alertCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/dark_background"
    app:strokeWidth="0dp">

<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Container for severity + date, top-right corner -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/severityDateContainer"
                android:orientation="vertical"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/alertSeverity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HIGH SEVERITY"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_red_light" />

                <TextView
                    android:id="@+id/alertTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jun 13, 2025"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/childProfileImage"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_profile"
                app:shapeAppearanceOverlay="@style/CircleImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/alertReason" />

            <View
                android:id="@+id/unreadDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_blue_dot"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/childProfileImage"
                app:layout_constraintTop_toTopOf="@id/childProfileImage"
                android:layout_marginStart="4dp"/>

            <!-- Child ID (bold) -->
            <TextView
                android:id="@+id/alertTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Child's ID 318657947"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/severityDateContainer"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/childProfileImage"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Reason (lighter text) -->
            <TextView
                android:id="@+id/alertReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:text="Hate Speech"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/childProfileImage"
                app:layout_constraintTop_toBottomOf="@id/severityDateContainer"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
