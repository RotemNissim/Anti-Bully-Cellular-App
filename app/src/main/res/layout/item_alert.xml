<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alertCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/dark_background"
    app:strokeWidth="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_background_selector"
        android:foreground="?attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- ✅ Unread indicator dot - positioned at start -->
            <View
                android:id="@+id/unreadIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/unread_indicator_dot"
                android:visibility="gone"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/childProfileImage"
                app:layout_constraintBottom_toBottomOf="@id/childProfileImage" />

            <!-- ✅ Profile image - positioned after unread indicator -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/childProfileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_profile"
                app:shapeAppearanceOverlay="@style/CircleImage"
                app:strokeColor="@color/accent_blue"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toEndOf="@id/unreadIndicator"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- ✅ Content container - positioned after profile image -->
            <LinearLayout
                android:id="@+id/contentContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/childProfileImage"
                app:layout_constraintEnd_toStartOf="@id/alertTime"
                app:layout_constraintTop_toTopOf="@id/childProfileImage"
                app:layout_constraintBottom_toBottomOf="@id/childProfileImage">

                <!-- Child name/title -->
                <TextView
                    android:id="@+id/alertTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Child's ID 318657947"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/assistant_bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Alert reason/description -->
                <TextView
                    android:id="@+id/alertReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Hate Speech"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/assistant_medium"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- ✅ Timestamp - positioned at end -->
            <TextView
                android:id="@+id/alertTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yesterday"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/assistant_medium"
                app:layout_constraintTop_toTopOf="@id/childProfileImage"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>