<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:strokeWidth="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recent_updates_background"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Blue indicator dot -->
            <View
                android:id="@+id/blueIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/unread_indicator_dot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/recentUpdatesTitle"
                app:layout_constraintBottom_toBottomOf="@id/recentUpdatesTitle" />

            <!-- "Recent updates" title -->
            <TextView
                android:id="@+id/recentUpdatesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Recent updates"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/assistant_bold"
                app:layout_constraintStart_toEndOf="@id/blueIndicator"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Child profile images container -->
            <LinearLayout
                android:id="@+id/profileImagesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recentUpdatesTitle">

                <!-- Child profile -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/childProfile1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default_profile"
                    app:shapeAppearanceOverlay="@style/CircleImage" />

                <!-- Second child profile (hidden for now) -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/childProfile2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="-12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_default_profile"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/CircleImage" />

            </LinearLayout>

            <!-- Alert content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/profileImagesContainer"
                app:layout_constraintEnd_toStartOf="@id/timeIndicator"
                app:layout_constraintTop_toTopOf="@id/profileImagesContainer"
                app:layout_constraintBottom_toBottomOf="@id/profileImagesContainer">

                <!-- Alert title -->
                <TextView
                    android:id="@+id/alertTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Problematic Content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/assistant_bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Alert description with count -->
                <TextView
                    android:id="@+id/alertDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="3 instances of harmful language were identified"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/assistant_medium"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Time indicator -->
            <TextView
                android:id="@+id/timeIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="51m"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/assistant_medium"
                app:layout_constraintTop_toTopOf="@id/recentUpdatesTitle"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- More options button -->
            <ImageButton
                android:id="@+id/moreOptionsButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="More options"
                app:tint="@color/text_secondary"
                app:layout_constraintTop_toTopOf="@id/profileImagesContainer"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>