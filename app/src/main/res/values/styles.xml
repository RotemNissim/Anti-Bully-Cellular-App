<resources>
<style name="Widget.AntiBully.ToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:layout_marginStart">8dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="strokeColor">?attr/colorPrimary</item>
    <item name="strokeWidth">1dp</item>
    <item name="android:textColor">@color/selector_toggle_text</item>
    <item name="backgroundTint">@color/selector_toggle_bg</item>
</style>
    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="Widget.AntiBully.FilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/surface_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/assistant_regular</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:checkable">true</item>
    </style>


</resources>